<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Rules Management</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ url_for('dashboard') }}">NetAegis Admin</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" href="{{ url_for('dashboard') }}">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ url_for('view_logs') }}">Logs</a></li>
                <li class="nav-item"><a class="nav-link active" href="{{ url_for('edit_rules') }}">Rules</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ url_for('restart_waf') }}">Restart WAF</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ url_for('logout') }}">Logout</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="container bg-white p-4 rounded shadow-sm">
    <h2 class="mb-4">Rules Management</h2>

    <ul class="nav nav-tabs" id="rulesTab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="global-tab" data-bs-toggle="tab" data-bs-target="#global" type="button" role="tab">Global Rules</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="proxy-tab" data-bs-toggle="tab" data-bs-target="#proxy" type="button" role="tab">Reverse Proxy Configs</button>
        </li>
    </ul>

    <div class="tab-content mt-3" id="rulesTabContent">
        <!-- Global Rules Tab -->
        <div class="tab-pane fade show active" id="global" role="tabpanel">
            <form method="POST" action="{{ url_for('edit_rules') }}">
                <div class="mb-3">
                    <label for="rules" class="form-label">Global ModSecurity Rules</label>
                    <textarea name="rules" id="rules" class="form-control" rows="15">{{ rules }}</textarea>
                </div>
                <button type="submit" class="btn btn-primary">Save Rules</button>
            </form>
        </div>

        <!-- Reverse Proxy Configs Tab -->
        <div class="tab-pane fade" id="proxy" role="tabpanel">
            <h5 class="mt-3">Create New Reverse Proxy Rule</h5>
            <form method="POST" action="{{ url_for('create_proxy_rule') }}" class="row g-3 mb-4">
                <div class="col-md-4">
                    <input type="text" name="path" class="form-control" placeholder="/example" required>
                </div>
                <div class="col-md-4">
                    <input type="text" name="target" class="form-control" placeholder="http://localhost:8080" required>
                </div>
                <div class="col-md-2 form-check pt-2">
                    <input class="form-check-input" type="checkbox" name="enable_modsec" id="enable_modsec">
                    <label class="form-check-label" for="enable_modsec">Enable ModSecurity</label>
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-success">Create</button>
                </div>
            </form>

            <hr>
            <h5>Existing Reverse Proxy Configurations</h5>
            {% if proxy_rules %}
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Filename</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for rule in proxy_rules %}
                        <tr>
                            <td>{{ rule.filename }}</td>
                            <td>
                                <button class="btn btn-sm btn-primary" data-bs-toggle="modal" data-bs-target="#editModal_{{ loop.index }}">Edit</button>
                                <form method="POST" action="{{ url_for('delete_proxy_rule', filename=rule.filename) }}" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                                </form>
                            </td>
                        </tr>

                        <!-- Edit Modal -->
                        <div class="modal fade" id="editModal_{{ loop.index }}" tabindex="-1" aria-labelledby="editModalLabel_{{ loop.index }}" aria-hidden="true">
                          <div class="modal-dialog modal-lg">
                            <div class="modal-content">
                              <form method="POST" action="{{ url_for('edit_proxy_rule', filename=rule.filename) }}">
                                  <div class="modal-header">
                                      <h5 class="modal-title" id="editModalLabel_{{ loop.index }}">Edit Proxy Rule - {{ rule.filename }}</h5>
                                      <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                  </div>
                                  <div class="modal-body">
                                      <textarea name="content" class="form-control" rows="10">{{ rule.content }}</textarea>
                                  </div>
                                  <div class="modal-footer">
                                      <button type="submit" class="btn btn-success">Save Changes</button>
                                      <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                  </div>
                              </form>
                            </div>
                          </div>
                        </div>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                <p>No proxy rules found.</p>
            {% endif %}
        </div>
    </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
