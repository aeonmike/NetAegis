<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="refresh" content="2">
    <meta charset="UTF-8">
    <title>Audit Logs</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .badge-severity-0, .badge-severity-1 { background-color: #dc3545; }    /* Red */
        .badge-severity-2, .badge-severity-3 { background-color: #ffc107; color: #000; }  /* Orange */
        .badge-severity-4 { background-color: #17a2b8; color: #fff; }           /* Cyan */
        .badge-severity-5, .badge-severity-unknown { background-color: #e2e3e5; color: #000; } /* Light */
    </style>
</head>
<body class="bg-light">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-4">
    <div class="container-fluid">
        <a class="navbar-brand" href="{{ url_for('dashboard') }}">NetAegis Admin</a>
        <div class="collapse navbar-collapse">
            <ul class="navbar-nav me-auto">
                <li class="nav-item"><a class="nav-link" href="{{ url_for('dashboard') }}">Dashboard</a></li>
                <li class="nav-item"><a class="nav-link active" href="{{ url_for('view_logs') }}">Logs</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ url_for('edit_rules') }}">Rules</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ url_for('restart_waf') }}">Restart WAF</a></li>
                <li class="nav-item"><a class="nav-link" href="{{ url_for('logout') }}">Logout</a></li>
            </ul>
        </div>
    </div>
</nav>

<div class="container py-4">
    <h2 class="mb-4">ModSecurity Audit Logs</h2>
    <a href="{{ url_for('dashboard') }}" class="btn btn-secondary mb-3">Back to Dashboard</a>

    {% with messages = get_flashed_messages(with_categories=true) %}
      {% if messages %}
        {% for category, message in messages %}
          <div class="alert alert-{{ category }}">{{ message }}</div>
        {% endfor %}
      {% endif %}
    {% endwith %}

    <div class="mb-3">
        <label for="severityFilter" class="form-label">Filter by Severity:</label>
        <select id="severityFilter" class="form-select w-auto d-inline-block">
            <option value="all">All</option>
            {% for s in range(0, 6) %}
                <option value="{{ s }}">Severity {{ s }}</option>
            {% endfor %}
        </select>
    </div>

    <div class="table-responsive">
        <table id="logTable" class="table table-bordered table-striped table-sm align-middle">
            <thead class="table-dark">
                <tr>
                    <th>Time</th>
                    <th>Client IP</th>
                    <th>Method</th>
                    <th>URI</th>
                    <th>Status</th>
                    <th>Rule ID</th>
                    <th>Message</th>
                    <th>Severity</th>
                    <th>Attack Type</th>
                </tr>
            </thead>
            <tbody>
            {% for log in logs %}
                {% set sev = log.severity if log.severity is not none else 'unknown' %}
                <tr data-severity="{{ sev }}">
                    <td>{{ log.timestamp }}</td>
                    <td>{{ log.ip }}</td>
                    <td>{{ log.method }}</td>
                    <td>{{ log.uri }}</td>
                    <td>{{ log.code }}</td>
                    <td>{{ log.rule_id }}</td>
                    <td>{{ log.message }}</td>
                    <td>
                        <span class="badge badge-severity-{{ sev }}">{{ log.severity if log.severity is not none else 'Unknown' }}</span>
                    </td>
                    <td>
                        {% if log.attack_type == "XSS" %}
                            <span class="badge bg-warning text-dark">XSS</span>
                        {% elif log.attack_type == "SQLI" %}
                            <span class="badge bg-danger">SQLI</span>
                        {% elif log.attack_type == "RCE" %}
                            <span class="badge bg-primary">RCE</span>
                        {% elif log.attack_type == "LFI" %}
                            <span class="badge bg-info text-dark">LFI</span>
                        {% elif log.attack_type == "RFI" %}
                            <span class="badge bg-secondary">RFI</span>
                        {% else %}
                            <span class="badge bg-light text-dark">Unknown</span>
                        {% endif %}
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="9" class="text-center">No log entries found.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
</div>

<script>
    document.getElementById("severityFilter").addEventListener("change", function () {
        const selected = this.value;
        const rows = document.querySelectorAll("#logTable tbody tr");
        rows.forEach(row => {
            const severity = row.getAttribute("data-severity");
            row.style.display = (selected === "all" || severity === selected) ? "" : "none";
        });
    });
</script>

</body>
</html>
